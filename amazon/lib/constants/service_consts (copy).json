{
	"Docker": {
		"Services": [ 	
			{
			        "Key":"centos-service",
			        "SourcesDir":"centos",
			        "Image": {
					"BaseName":"centos",
					"BaseTag":"8.4.2105",
					"Name":"maxmin13/centos8",
					"Tag":"v1"
				}
			},
			{
			        "Key":"ruby-service",
			        "SourcesDir":"ruby",
			        "Image": {
					"BaseName":"maxmin13/centos8",
					"BaseTag":"v1",
					"Name":"maxmin13/ruby",
					"Tag":"v1"
				}
			},
			{
				"Key":"redis-service",
				"SourcesDir":"redis",
				"Image": {
					"BaseName":"maxmin13/centos8",
					"BaseTag":"v1",
					"Name":"maxmin13/redis",
					"Tag":"v1",
					"ConfigFiles": [ "redis.conf" ]
				},
			 	"Container": {
					"Network": "bridge",
					"Application": {
						"ContainerPort":"6379",
						"HostPort":"6379",
						"Url": "redis-cli -h <address> -p <port>"	
					}	 	
			 	}
			},
			{
				"Key":"sinatra-service",
				"SourcesDir":"sinatra",
				"Image": {
					"BaseName":"maxmin13/ruby",
					"BaseTag":"v1",
					"Name":"maxmin13/sinatra",
					"Tag":"v1"
				},
			 	"Container": {
					"Network": "bridge",
					"Application": {
						"ContainerPort":"4567",
						"ContainerDir": "/opt/sinatra",
						"HostPort":"4567",
						"HostDir": "/opt/sinatra",
						"DeployDir": "/opt/sinatra/webapp",
						"Url": "http://<address>:<port>/info"	
					},
					"Cmd":"/opt/sinatra/webapp/bin/run"	 	
			 	}
			},
			{
				"Key":"nginx-service",
				"SourcesDir":"nginx",
				"Image": {
					
					"BaseName":"maxmin13/centos8",
					"BaseTag":"v1",
					"Name":"maxmin13/nginx",
					"Tag":"v1",
					"ConfigFiles": [ "global.conf", "nginx.conf" ]
				},
			 	"Container": {
					"Network": "bridge",
					"Application": {
						"ContainerPort":"80",
						"ContainerDir": "/var/www/html",
						"HostPort":"80",
						"HostDir": "/opt/nginx",
						"DeployDir": "/opt/nginx/welcome",
						"Url": "http://<address>:<port>/welcome"	
					}	 	
			 	}
			},
			{
				"Key":"jenkins-service",
				"SourcesDir":"jenkins",
			 	"Image": {
					"BaseName":"jenkins/jenkins",
					"BaseTag":"lts",
					"Name":"maxmin13/jenkins",
					"Tag":"v1",
					"ConfigFiles": [ "plugins.txt" ]			 	
			 	},
			 	"Container": {
					"Network": "bridge",
					"Engine": {
						"ContainerSocket":"/var/run/docker.sock",
						"HostSocket":"/var/run/docker.sock"
					},
					"Application": {
						"ContainerPort":"8080",
						"ContainerDir": "/var/jenkins_home",
						"HostPort":"80",
						"HostDir": "/opt/jenkins",
						"Url": "http://<address>:<port>/jenkins"	
					}	 	
			 	}
			}
		]
	}
}   



